<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingBottom="5dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewAoHandModeValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Значение в ручном режиме"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextAoHandValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewAoHandModeValue"
            android:ems="10"
            android:inputType="numberSigned"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextAoHandValue"
            android:text="Максимальное значение"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewMonth"
            android:ems="10"
            android:inputType="numberSigned"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextMonth"
            android:text="Минимальное значение"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewYear"
            android:ems="10"
            android:inputType="numberSigned"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewAoModeRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextYear"
            android:text="Режим"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/radioGroupAoMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewAoModeRadio">

            <RadioButton
                android:id="@+id/radioButtonAoAuto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Автоматический" />

            <RadioButton
                android:id="@+id/radioButtonAoHand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ручной" />

        </RadioGroup>

        <TextView
            android:id="@+id/textViewAoInversionRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroupAoMode"
            android:text="Инверсия"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/radioGroupAoInversion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewAoInversionRadio">

            <RadioButton
                android:id="@+id/radioButtonAoInversionOff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Отключена" />

            <RadioButton
                android:id="@+id/radioButtonAoInversionOn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Включена" />

        </RadioGroup>

    </LinearLayout>


</RelativeLayout>